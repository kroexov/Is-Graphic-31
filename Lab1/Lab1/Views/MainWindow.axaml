<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Lab1.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="Lab1.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Lab1"
        Width="1200" Height="800"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.Styles>
            
            <Style Selector="Button">
                <Setter Property="Width" Value="300"></Setter>
                <Setter Property="Height" Value="40"></Setter>
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="Foreground" Value="#FFFFFFFF" />
                <Setter Property="BorderThickness" Value="2" />
                <Setter Property="Background" Value="#FFDD4812" />
                <Setter Property="BorderBrush" Value="#FFFFFFFF" />
                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            </Style>
            <Style Selector="Button /template/ ContentPresenter">
                <Setter Property="CornerRadius" Value="10" />
            </Style>
            <Style Selector="Button:pointerover /template/ ContentPresenter">
                <Setter Property="BorderBrush" Value="#FFDD4812" />
            </Style>
        </Grid.Styles>
        <ExperimentalAcrylicBorder Grid.Row="1" Grid.Column="1" IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        
        <TextBox Grid.Row="0" Grid.Column="2" FontSize="30" Text="ЦветПР"/>
        
        <StackPanel Grid.ColumnSpan="3">
            <TextBlock Foreground="Orange" Margin="0 10 0 0" HorizontalAlignment="Center" FontSize="40">Лабораторная работа номер 1</TextBlock>
        <TextBlock Foreground="Orange" Margin="0 15 0 0" HorizontalAlignment="Center" FontSize="30">Приложение для представления изображений</TextBlock>
        <ToggleSwitch IsChecked="{Binding RgbMode}" Margin="0 15 0 0" OnContent="RGB" OffContent="BGR" HorizontalAlignment="Center" FontSize="20" HorizontalContentAlignment="Center">Порядок следования цветов</ToggleSwitch>
        </StackPanel>
        <Border Grid.Row = "1" Grid.Column="1"
                BorderThickness="2" 
                BorderBrush="Black"
                CornerRadius="3"
                Padding="4">
            
            <StackPanel >
                <TextBlock Width="400" TextAlignment="Center" HorizontalAlignment="Center" FontSize="24">Список Файлов</TextBlock>
            <Border  HorizontalAlignment="Center"
                    Background="FloralWhite"
                    BorderThickness="2" 
                    BorderBrush="Black"
                    CornerRadius="3"
                    Padding="4">
        <ListBox  Items="{Binding Items}" SelectedItem="{Binding SelectedImage}">
        </ListBox>
                </Border>
        </StackPanel>
        </Border>
        
        
        <Popup Grid.Row="1" Grid.Column="1" IsOpen="{Binding IsErrorOccured}">
            <TextBlock Text="{Binding ErrorText}"/>
        </Popup>
        <StackPanel Grid.Row="2" Grid.Column="2">
            <Button Content="Открыть изображение" IsEnabled="{Binding IsImageSelected}" Command="{Binding OpenFile}"></Button>
            <Button Content="Сохранить изображение" IsEnabled="{Binding IsImageSelected}" Command="{Binding SaveFile}" ></Button>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Grid.Column="0">
            <Button Content="Добавить изображение" Command="{Binding AddNewFile}"></Button>
            <Button Content="Удалить изображение" IsEnabled="{Binding IsImageSelected}" Command="{Binding DeleteFile}"></Button>
        </StackPanel>
    </Grid>

</Window>

